<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/white_five"
    android:gravity="center|left"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_16"
    android:paddingRight="@dimen/dimen_16">

    <ImageView
        android:id="@+id/grab_logo"
        android:layout_width="@dimen/nav_header_logo"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:contentDescription="TODO"
        android:src="@drawable/grab" />

    <TextView
        android:id="@+id/grab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_toRightOf="@+id/grab_logo"
        android:text="Grab News"
        android:textColor="@color/header_color"
        android:textSize="@dimen/nav_title_text" />

    <TextView
        android:id="@+id/grab_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grab_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/grab_logo"
        android:text="copyright"
        android:textColor="@color/header_color"
        android:textSize="@dimen/dimen_18_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mgy40" />

</RelativeLayout>